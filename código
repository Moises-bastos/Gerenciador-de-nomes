function filtrarNomes() {
    let nomes: string[] = [];
    let nome: string;

    // Pedindo os 4 nomes
    for (let i = 0; i < 4; i++) {
        nome = String(prompt('Digite um nome')!);
        nomes.push(nome);
    }

    // Filtrando apenas nomes com 4 letras
    let nomesComQuatroletras = nomes.filter(n => n.length == 4);

    if (nomesComQuatroletras.length > 0) {
        alert("Nomes com quatro letras: " + nomesComQuatroletras.join(", "));
    }

    // Remoção de um nome
    let removerNome: string = String(prompt('Digite o nome que deseja remover')!);
    let indice = nomes.indexOf(removerNome);

    if (indice != -1) {
        nomes.splice(indice, 1);
        alert("Nome removido com sucesso");
    } else {
        alert("Nome não encontrado");
    }

    return ("Lista final: " + nomes.join(", "));
}

alert(filtrarNomes());
